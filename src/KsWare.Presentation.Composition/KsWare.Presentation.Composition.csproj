<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.0;net45</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Copyright>Copyright © by KsWare. All rights reserved.</Copyright>
    <PackageLicenseFile></PackageLicenseFile>
    <PackageIconUrl></PackageIconUrl>
    <PackageProjectUrl>https://github.com/KsWare/KsWare.Presentation.Composition</PackageProjectUrl>
    <Description>Use CompositionBuilder and nothing else. ;-) 
Supports .Net Framework 4.5+ and .NetCoreApp 3.x
</Description>
    <Company>KsWare</Company>
    <Authors>KsWare</Authors>
    <Version>0.0.0</Version>
    <PackageLicenseExpression>LGPL-3.0-only</PackageLicenseExpression>
    <PackageReleaseNotes>https://raw.githubusercontent.com/KsWare/KsWare.Presentation.Composition/master/ChangeLog.md</PackageReleaseNotes>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Properties\KsWare.Presentation.Public.snk</AssemblyOriginatorKeyFile>
    <Product>KsWare Presentation</Product>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryUrl>https://github.com/KsWare/KsWare.Presentation.Composition</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>mef CompositionBuilder compositiion</PackageTags>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(TargetName).xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(TargetName).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\icon.png" Link="Properties\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommonServiceLocator" Version="2.0.5" />
    <PackageReference Include="System.ComponentModel.Composition" Version="4.7.0" />
  </ItemGroup>

</Project>
